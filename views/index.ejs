<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>VsCodeClone</title>
  <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
  <div id="main">
    <div id="side">
      <h4>VS-CodeClone</h4>
      <div id="line"></div>
      <div class="fileicon">
        <h5>FolderName</h5>
        <div class="icons">
          <i id="filecreate" class="ri-file-add-fill"></i>
          <i id="foldercreate" class="ri-folder-add-fill"></i>
          <i class="ri-refresh-fill"></i>

        </div>
      </div>

      <form class="formcreation" id="fileform" action="/filecreate">
        <input name="filename" type="text" placeholder="File name">
      </form>

      <form class="formcreation" id="folderform" action="/foldercreate">
        <input type="foldername" placeholder="Folder name">
      </form>

      <div class="files">
        <div class="file">
          index.html
        </div>
      </div>
    </div>

    <div id="right">
      <small>nothing here</small>
    </div>
  </div>
  <script>
    function turnOffBoth() {
      document.querySelectorAll(".formcreation").forEach(function (elem) {
        elem.style.display = "none";
      })
    }
    document.querySelector("#filecreate").addEventListener("click", function () {
      turnOffBoth();
      document.querySelector("#fileform").style.display = "initial";
    })
    document.querySelector("#foldercreate").addEventListener("click", function () {
      turnOffBoth();
      document.querySelector("#folderform").style.display = "initial";
    })
  </script>
</body>

</html>